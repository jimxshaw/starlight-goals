<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@string/font_family</item>
        <item name="android:textColorHint">@android:color/white</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomDatePickerItemStyle">
        <item name="android:layout_width">@dimen/custom_date_picker_text_view_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_custom_date_picker_item</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/custom_date_picker_text_size</item>
        <item name="android:drawableBottom">@drawable/custom_date_picker_down_normal</item>
        <item name="android:drawableTop">@drawable/custom_date_picker_up_normal</item>
        <item name="android:drawablePadding">@dimen/custom_date_picker_text_view_drawable_padding
        </item>
    </style>
</resources>
