<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/background_recycler_view_row_goal"
    android:padding="22dp">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/star"/>

    <TextView
        android:id="@+id/text_view_goal_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@string/font_family"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="2dp"
        android:text="This is a goal"/>

    <TextView
        android:id="@+id/text_view_date_due"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_family"
        android:paddingTop="2dp"
        android:text="Date Due"/>

</LinearLayout>